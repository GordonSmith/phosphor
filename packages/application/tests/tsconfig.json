{
  "compilerOptions": {
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "build",
    "lib": [
      "es5"
    ],
    "types": [
      "chai",
      "mocha"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@phosphor/application": [
        "../lib/index"
      ]
    }
  },
  "include": [
    "src/*"
  ],
  "references": [
    {
      "path": "../../commands"
    },
    {
      "path": "../../coreutils"
    },
    {
      "path": "../../widgets"
    }
  ]
}