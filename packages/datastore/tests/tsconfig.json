{
  "compilerOptions": {
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./build",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "chai",
      "mocha"
    ],
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@phosphor/datastore": [
        "../lib/index"
      ]
    }
  },
  "include": [
    "src/*"
  ]
}