{
  "compilerOptions": {
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./build",
    "lib": [
      "es5",
      "es2015.promise",
      "es2015.iterable",
      "dom"
    ],
    "types": []
  },
  "include": [
    "src/*"
  ]
}